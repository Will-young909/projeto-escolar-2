<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Regimath</title>
    <link rel="stylesheet" href="../css/home2.css">
</head>
<body>
  <header>
        <img src="/imagens/Regimath_sem fundo cor branco2.png" alt="Logo Regimath" id="logo">
        <section class="header-links">
            <a href="/cadastro" class="btn-cadastro">Cadastre-se</a>
            <a href="/login" class="btn-cadastro">Login</a>
        </section>
        <!-- Ícone do menu hambúrguer ☰ (apenas mobile) ícone estilizado -->
        <img src="/imagens/menu.png" alt="Menu" id="cardapio">
    </header>

    <!-- Overlay (mobile) -->
    <div id="overlay"></div>

    <!-- Menu lateral -->
    <nav id="menu" class="collapsed">
        
        <!-- Botão fechar (mobile) -->
        <button id="close-menu">&times;</button>

        <!-- Botão recolher (desktop) -->
        <button id="toggle-menu" aria-label="Recolher menu">
         <svg id="toggle-icon" xmlns="http://www.w3.org/2000/svg" 
           viewBox="0 0 24 24" width="24" height="24" fill="white">
           <path d="M15.41 7.41 14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
         </svg>
        </button>

       <p>Sobre Nós</p>
       <a href="/chat">Chat</a>
       <a href="/chat2">Chat2</a>
       <a href="/home2">Home2</a>
       <button id="toggle-dark">Modo Escuro</button>

    </nav>

    <main>
      <h1>Bem-vindo ao Regimath</h1>
      <h2>Aumente sua nota conosco!</h2>
      <h3>Busque pelo professor ideal para você!</h3>

      <div class="landing-v4-ads">
        <div class="landing-v4-ads-bloc-container">
          <div class="landing-v4-ads-bloc tck-announce-link" data-version="2" onclick="location.href='/exibir_prof/:id'">
            <div class="landing-v4-ads-wrapper">
              <div class="landing-v4-ads-pic">
               <img class="img" src="/imagens/Regimath_sem fundo cor preto2.png" alt="Foto do professor">
               <div class="landing-v4-ads-pic-mask"></div>
                 <div class="landing-v4-ads-pic-text-container">
                  <h4>Nome do Professor</h4>
                  <p>Texto opcional</p>
               </div>
              </div>
            </div>
          </div>
       </div>
      </div>
    </main>

    <footer>
        <p>&copy; 2025 Regimath. Todos os direitos reservados.</p>
    </footer>

    <script>

    // Dark mode toggle
    const darkBtn = document.getElementById('toggle-dark');
    darkBtn.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark-mode');
      // Salva preferência no localStorage
      if(document.documentElement.classList.contains('dark-mode')) {
        localStorage.setItem('dark-mode', 'on');
      } else {
        localStorage.setItem('dark-mode', 'off');
      }
    });
    // Carrega preferência ao abrir
    if(localStorage.getItem('dark-mode') === 'on') {
      document.documentElement.classList.add('dark-mode');
    }
        const menuBtn = document.getElementById('cardapio');
        const menu = document.getElementById('menu');
        const overlay = document.getElementById('overlay');
        const closeBtn = document.getElementById('close-menu');
        const toggleBtn = document.getElementById("toggle-menu");

        // Mobile toggle
        function toggleMenu() {
            menu.classList.toggle('active');
            overlay.classList.toggle('active');
        }
        if (menuBtn) menuBtn.addEventListener('click', toggleMenu);
        if (overlay) overlay.addEventListener('click', toggleMenu);
        if (closeBtn) closeBtn.addEventListener('click', toggleMenu);

        // Desktop recolher
        if (toggleBtn) {
            toggleBtn.addEventListener("click", () => {
                menu.classList.toggle("collapsed");
            });
        }
    </script>
</body>
</html>