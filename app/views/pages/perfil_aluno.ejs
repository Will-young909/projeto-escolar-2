<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil do Aluno</title>
  <link rel="stylesheet" href="../css/perfilAluno.css">
  <link rel="icon" href="../imagens/Regimath_sem fundo cor branco2.png"/>
</head>
<body>
  <header>
    <a href="/"><img src="/imagens/Regimath_curto.png" alt="Logo Regimath" id="logo"></a>
    <nav>
      <a href="/">Voltar</a>
      <a href="/logout">Sair</a>
    </nav>
  </header>

  <main class="perfil-container">
    <!-- Foto e informações -->
    <section class="perfil-info">
   <img src="<%= user.foto || '/imagens/imagem_perfil.jpg' %>" 
     alt="Foto do Aluno" 
     class="foto-perfil">
   <h1><%= user.nome %></h1>
   <p class="descricao"><%= user.descricao || "Aluno cadastrado na plataforma." %></p>
    </section>

    <!-- Informações adicionais -->
    <section class="dados-aluno">
      <h2>Informações do Aluno</h2>
      <ul>
  <li><strong>Email:</strong> <%= user.email || "Não informado" %></li>
      </ul>
    </section>

    <!-- Histórico de aulas -->
    <section class="historico">
      <h2>Histórico de Aulas</h2>
  <% if (user.aulas && user.aulas.length > 0) { %>
        <ul>
          <% user.aulas.forEach(aula => { %>
            <li>
              <strong><%= aula.data %></strong> — <%= aula.conteudo %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>Ainda não tem aulas registradas.</p>
      <% } %>
    </section>
  </main>

</body>
</html>
